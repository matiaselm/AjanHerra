<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InputFragment"
    android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/addInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="76dp"
        android:text="Lisää"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/colorAccent2"
        android:textColor="@color/colorAccent4"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvHello"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical|center"
        android:text='Hei "Käyttäjä"!'
        android:textColor="@color/colorAccent2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerActions"
        android:layout_width="179dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorAccent2"
        android:textColor="@color/colorAccent5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timeView2"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHello"
        app:layout_constraintVertical_bias="0.064" />

    <EditText
        android:id="@+id/timeView2"
        android:layout_width="122dp"
        android:layout_height="71dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="min"
        android:textColorHint="@color/colorAccent4"
        android:inputType="number"
        android:textColor="@color/colorAccent4"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/addInput"
        app:layout_constraintEnd_toStartOf="@+id/addInput"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toEndOf="@+id/rmInput"
        app:layout_constraintTop_toTopOf="@+id/rmInput"
        app:layout_constraintVertical_bias="0.521" />


    <Button
        android:id="@+id/rmInput"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/colorAccent2"
        android:text="Nollaa"
        android:textColor="@color/colorAccent7"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/addInput"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="163dp"
        android:layout_height="93dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorAccent2"
        android:text="Aloita"
        android:textColor="@color/colorAccent4"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerActions"
        app:layout_constraintVertical_bias="0.046"
        tools:text="Aloita" />

    <TextView
        android:id="@+id/addActivity"
        android:layout_width="166dp"
        android:layout_height="81dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Lisää aktiviteetin kesto manuaalisesti minuuteina"
        android:textColor="@color/colorAccent2"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/timeView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startButton"
        app:layout_constraintVertical_bias="0.79" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="162dp"
        android:layout_height="91dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text='Valitse uusi aktiviteetti ja aloita se painamalla "aloita"'
        android:textColor="@color/colorAccent2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/startButton"
        app:layout_constraintTop_toTopOf="@+id/startButton"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>